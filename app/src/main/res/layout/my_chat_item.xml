<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#161823"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:minHeight="72dp"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/your_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="12dp"
        android:visibility="invisible">

        <com.example.admin.tiktok.widget.CircleImageView
            android:id="@+id/your_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:layout_width="26dp"
            android:layout_height="13dp"
            android:src="@drawable/im_icon_notice_official"
            android:layout_gravity="end|bottom"
            tools:visibility="visible"
            />

    </FrameLayout>

    <TextView
        android:textColor="#cccccc"
        android:text="抖音小助手"
        android:id="@+id/your_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/your_frame"
        android:textSize="15sp"
        android:layout_marginTop="17dp"
        android:layout_marginRight="12dp"
        android:visibility="invisible"
        />

    <FrameLayout
        android:id="@+id/my_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"
        android:visibility="invisible">

        <com.example.admin.tiktok.widget.CircleImageView
            android:id="@+id/my_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:layout_width="26dp"
            android:layout_height="13dp"
            android:src="@drawable/im_icon_notice_official"
            android:layout_gravity="end|bottom"
            tools:visibility="visible"
            />

    </FrameLayout>

    <TextView
        android:textColor="#cccccc"
        android:text="抖音小助手"
        android:id="@+id/my_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/my_frame"
        android:textSize="15sp"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="12dp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_centerInParent="true"
        android:textColor="#cccccc"
        android:text="12:33"
        android:textSize="16dp"
        android:visibility="invisible"
        />

</RelativeLayout>